{% extends 'base.html.twig' %}

{% block title %}Add Recipe{% endblock %}

{% block body %}


<div class="container mx-auto px-4 flex items-center justify-center min-h-screen">
    <a href="/recipe" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Back
    </a>
    <div class="w-full max-w-lg bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h1 class="text-2xl mb-4 text-center">Add a New Recipe</h1>


        {{ form_start(form, {'attr': {'class': 'bg-white rounded px-8 pt-6 pb-8 mb-4'}}) }}
            {% for field in form %}
                <div class="mb-4">
                    {{ form_label(field, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                    {{ form_errors(field) }}
                </div>
            {% endfor %}
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Add Recipe
            </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}